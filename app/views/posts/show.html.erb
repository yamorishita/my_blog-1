<div class="col-lg-12">
  <h1><%= @post.title %></h1>
  <p>カテゴリ：<%= @post.category %></p>
  <p>投稿日：<%= @post.created_at %></p>
  <hr>
  <p>
    <%= simple_format(@post.body) %>
  </p>
  <hr>
  <a href="/posts/<%= @post.id %>/edit" class="btn btn-default">編集する</a>
  <a href="/posts/<%= @post.id %>/delete" class="btn btn-danger">削除する</a>
</div>
