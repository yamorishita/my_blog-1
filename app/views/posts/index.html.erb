<div class="col-md-8">
  <% @posts.each do |post| %>
    <div class="article">
      <h2><%= post.title %></h2>
      <p><%= post.created_at %></p>
      <p><%= truncate(post.body, length: 50) %></p>
      <p><a class="btn btn-default" href="/posts/<%= post.id %>" role="button">続きを読む</a></p>
    </div>
  <% end %>
</div>

<div class="col-md-4">
  <div class="thumbnail">
    <img src="<%= Author.first.image_url %>" alt="著者イメージ">
    <div class="caption">
      <h3><%= Author.first.name %></h3>
      <p><%= Author.first.description %></p>
    </div>
  </div>

  <div class="list-group">
    <% @posts.each_with_index do |post, index| %>
      <%# ６個目以上の記事の場合はBreak（each文をその場で終わらせる） %>
      <% if index >= 5
           break
         end
      %>
      <%# link_to post.title, post_path(post.id), class: "list-group-item" %>
      <a href="/posts/<%= post.id %>" class="list-group-item"><%= post.title %></a>
    <% end %>
  </div>
</div>
