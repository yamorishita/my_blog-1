<div class="col-md-8">
  <% @posts.each do |post| %>
    <div class="article">
      <h2><%= post.title %></h2>
      <p><%= find_category_title(post.category_id) %> <%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
      <p><%= truncate(post.body, length: 50) %></p>
      <p>
        <%= link_to "続きを読む", post_path(post.id), class: 'btn btn-default' %>
      </p>
    </div>
  <% end %>
</div>

<div class="col-md-4">
  <div class="thumbnail">
    <% author = Author.first %>
    <img src="<%= author.image_url %>" alt="著者イメージ">
    <div class="caption">
      <h3><%= author.name %></h3>
      <p><%= author.description %></p>
    </div>
  </div>

  <div class="list-group">
    <% @posts.each_with_index do |post, index| %>
      <%# ６個目以上の記事の場合はBreak（each文をその場で終わらせる） %>
      <% if index >= 5
           break
         end
      %>
      <%# link_to post.title, post_path(post.id), class: "list-group-item" %>
      <a href="/posts/<%= post.id %>" class="list-group-item"><%= post.title %></a>
    <% end %>
  </div>
</div>
